<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvItemGenres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="Genres"
        android:textColor="@color/color_text_default"
        android:textSize="@dimen/size_13"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvFence"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_marginStart="4dp"
        android:background="@color/color_text_default"
        app:layout_constraintBottom_toBottomOf="@+id/tvItemGenres"
        app:layout_constraintStart_toEndOf="@+id/tvItemGenres"
        app:layout_constraintTop_toTopOf="@+id/tvItemGenres" />
</androidx.constraintlayout.widget.ConstraintLayout>