<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_marginBottom="@dimen/margin_10"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvLinkVideoYouTobe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="link you tube"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/tvTitleVideo"
        app:layout_constraintTop_toBottomOf="@+id/tvTitleVideo" />

    <ImageView
        android:id="@+id/imgThumnaiYouTobe"
        android:layout_width="160dp"
        android:layout_height="100dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvTitleVideo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="TextView"
        android:textColor="@color/color_text_default"
        android:textSize="@dimen/size_16"
        app:layout_constraintBottom_toBottomOf="@+id/imgThumnaiYouTobe"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgThumnaiYouTobe"
        app:layout_constraintTop_toTopOf="@+id/imgThumnaiYouTobe"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tvKeyVideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="key"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/tvLinkVideoYouTobe"
        app:layout_constraintTop_toBottomOf="@+id/tvLinkVideoYouTobe" />
</androidx.constraintlayout.widget.ConstraintLayout>